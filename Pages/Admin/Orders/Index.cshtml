@page
@model Store.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Username</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Order)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Username</td>
                <td>@order.ProductId</td>
                <td>@order.Quantity</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-outline-danger flex-shrink-0" href="/Admin/Orders/Delete?id=@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
