@using Microsoft.AspNetCore.Identity
@using Store.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.styles.css" asp-append-version="true" />
</head>

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject Func<Task<int>> GetNotificationCount

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        if (User.IsInRole("admin"))
                        {
                            <ul class="navbar-nav">
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Products/Index">Products</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Reviews/Index">Review</a>
                                </li>
                                <li class="nav-item dropdown">                            
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Orders/Index">View all Order</a>
                                </li>
                            </ul>
                        }
                        if (User.IsInRole("buyer"))
                        {
                            <ul class="navbar-nav">
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Products/Index">Products</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Reviews/Index">Review</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/FavoriteProducts/Index">Favorite</a>
                                </li>
                                <li class="nav-item dropdown">                            
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Order
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Orders/Create">Place an Order</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Orders/Index">View my Order</a></li>
                                    </ul>
                                </li>
                            </ul>

                            <form class="d-flex">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Notifications/Index">
                                    Notification
                                    <span class="badge bg-dark text-white ms-1 rounded-pill">@GetNotificationCount().Result</span>
                                </a>
                                
                            </form>
                        }
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Products/Index">Products</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Reviews/Index">Review</a>
                            </li>
                        </ul>
                    }

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Store - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>